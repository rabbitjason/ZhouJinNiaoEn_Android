<resources>

    <style name="NoActionBarAppTheme" parent="@android:style/Theme.Holo.NoActionBar"></style>

    <style name="CommonLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="loading_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:id">@id/loading</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="dialogBottomStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 个人中心的侧滑菜单中textview属性 -->
    <style name="text_style_left">
        <item name="android:drawablePadding">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textColor">@color/text_name_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
